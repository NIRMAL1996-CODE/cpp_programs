//write a program to create a class to add and subtract integers
#include<iostream>
using namespace std;
class arithmetic
{
private:
    int a;
    int b;
public:
    arithmetic(int a,int b);
    int add();
    int sub();
};

arithmetic::arithmetic(int a,int b)
{
    this->a=a;
    this->b=b;
}

int arithmetic :: add()
{
    int c;
    c= a+b;
    return c;
}

int arithmetic :: sub()
{
    int c;
    c= a-b;
    return c;
}

int main()
{
    arithmetic A(20,8);
    
    cout<<"Add= "<<A.add()<<endl;
    cout<<"sub= "<<A.sub()<<endl;
    return 0;
    
}
